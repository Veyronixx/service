---
import '~/assets/styles/base.css';
import '../CopyCodeButton/styles.css'
import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

import type { MetaSEO } from '~/types';
import { SITE } from '~/config.mjs';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
  </head>

      <MetaTags {...meta} />
    <script>     
      import '../CopyCodeButton/copy-code-button.js'
      import '../CopyCodeButton/create-copy-buttons.js'
    </script>
  </head>

  <body class="antialiased font-heading text-page bg-white dark:text-slate-300 tracking-tight dark:bg-slate-700">
    <slot />
    <BasicScripts />
    <style>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
